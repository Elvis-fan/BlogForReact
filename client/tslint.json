{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },

  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsx-wrap-multiline":false,
    "arrow-parens":false,
    "jsx-alignment":false,
    "jsx-no-multiline-js":false,
    "no-console": false,
    "jsx-no-lambda": false,
    "max-line-length":false,
    "no-eval": true,
    "no-trailing-whitespace": false,
    "no-unused-variable": false,
    "no-unused-expression": false,
    "no-import-side-effect": false,
    "no-var-keyword": true,
    "max-classes-per-file": false,
    "ordered-imports": false,
    "import-sources-order": false,
    "no-shadowed-variable": false,
    "named-imports-order": false,
    "prefer-const": false,
    "interface-name": false,
    "no-empty": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "prefer-for-of": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "never",
      "ignore-interfaces"
    ]
  }
}