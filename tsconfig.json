{
  "compilerOptions": {
    "outDir": "build/dist",
    "paths": {
      "@/*": ["src/*"],
      "@common": ["src/common/*"]
    },
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "watch": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "doc/src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ]
}
