{
  "compilerOptions": {
    "target": "es2018",
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./build/src",
    "declaration": true,
    "declarationDir": "./build/@types",
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/koa-custom-response/typings/response.d.ts",
      "src/typings.d.ts"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@tools/*": [
        "./tools/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
    "lib": [
      "es2015"
    ]
  },
  "compileOnSave": true,
  "includes": [
    "src/**/*",
    "node_modules"
  ],
  "exclude": [
    "build"
  ]
}