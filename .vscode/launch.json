    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "client-server",
            "sourceMaps": true,
            "args": [
                "${workspaceFolder}/client/scripts/start.js"
            ],
            "restart": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server",
            "sourceMaps": true,
            "runtimeArgs": [
                "--nolazy",
                "--inspect",
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/server/src/main.ts"
            ],
            "restart": true,
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}